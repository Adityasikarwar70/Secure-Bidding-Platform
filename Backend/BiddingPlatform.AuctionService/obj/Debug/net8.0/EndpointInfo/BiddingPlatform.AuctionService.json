            "nullable": true
          },
          "expectedPrice": {
            "type": "number",
            "format": "double"
          },
          "categoryId": {
            "type": "integer",
            "format": "int64",
            "nullable": true
          },
          "durationDays": {
            "type": "integer",
            "format": "int32"
          },
          "imageUrls": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PlaceBidRequest": {
        "required": [
          "amount",
          "auctionId"
        ],
        "type": "object",
        "properties": {
          "auctionId": {
            "type": "integer",
            "format": "int64"
          },
          "amount": {
            "minimum": 1,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "UpdateCategoryRequest": {
        "type": "object",
        "properties": {
